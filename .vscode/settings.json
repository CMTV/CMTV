{
    "json.schemas": [
        {
            "fileMatch": ["data/tags/*"],
            "url": "./.vscode/schemas/tags.json"
        },

        {
            "fileMatch": ["data/projects/list/*/project.json"],
            "url": "./.vscode/schemas/project.json"
        },

        {
            "fileMatch": ["data/projects/list/*/goals.json"],
            "url": "./.vscode/schemas/goals.json"
        },

        //
        // Life Year
        //

        {
            "fileMatch": ["data/life/*/report.json"],
            "url": "./.vscode/schemas/report.json"
        },

        {
            "fileMatch": ["data/life/*/results.json"],
            "url": "./.vscode/schemas/year-results.json"
        }
    ],

    "yaml.schemas":
    {
        "./.vscode/schemas/project.json": "data/projects/list/*/project.yml",
        "./.vscode/schemas/goals.json": "data/projects/list/*/goals.yml",

        "./.vscode/schemas/tags.json": "data/tags/*",

        "./.vscode/schemas/report.json": "data/life/*/report.yml"
    },

    //
    // Addons
    //
    
    "svg.preview.background": "dark-transparent"
}